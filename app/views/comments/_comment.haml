%li.comment
  .comment-actions
    .comment-score
      -# this div is necessary for vertical formatting, even though it's empty and useless
    .comment-voting.mtn2
      %a.comment-up.comment-up-off{href: '#', tabindex: 0, role: 'button', title: 'This comment adds something useful to the conversation.'}
        %svg.svg-icon.iconArrowUp{width: '18', height: '18', viewbox: '0 0 18 18'}
          %path{d: 'M1 12h16L9 4l-8 8Z'}
    .comment-flagging
      %button.js-comment-flag.s-btn.s-btn__unset.bg-transparent.c-pointer.fc-black-300.o40.h:fc-red-500.h:o100{title: 'Flag this comment for serious problems or moderator attention'}
        %svg.svg-icon.iconFlag{width: '18', height: '18', viewbox: '0 0 18 18'}
          %path{d: 'M3 2v14h2v-6h3.6l.4 1h6V3H9.5L9 2H3Z'}
  .comment-text
    .comment-body
      %span.comment-copy
        = comment.body
      .d-inline-flex.ai-center
        &nbsp;-&nbsp;
        %a.comment-user{href: '#'}= comment.author.name
      %span.comment-date
        %a.comment-link{href: '#'}= human_time comment.created_at, year: true

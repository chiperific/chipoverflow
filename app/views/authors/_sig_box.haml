-# frozen_string_literal: true

.user-info.user-hover
  .user-action-time
    - if is_question
      asked
    - else
      answered
    %span.relativetime= asked_at
  .user-gravatar32
    %a{ href: 'https://stackoverflow.com/users/1880203', target: '_blank' }
      .gravatar-wrapper-32
        %img.bar-sm{ src: author.gravatar_url, alt: 'Chiperific\'s user avatar', width: '32', height: '32' }
  .user-details
    %a{href: 'https://stackoverflow.com/users/1880203', target: '_blank'}
      = author.name
    .-flair
      %span.reputation-score= human_number author.reputation, display_zero: true
      %span
        %span.badge1
        %span.badgecount= human_number author.gold, display_zero: true
      %span
        %span.badge2
        %span.badgecount= human_number author.silver, display_zero: true
      %span
        %span.badge3
        %span.badgecount= human_number author.bronze, display_zero: true

